  "id_guide": {
    "blotter": {
      "name": "Blotter (paper tabs)",
      "tips": [
        "Common size ~6\u20137mm",
        "Use Ehrlich/Hofmann on a tiny corner"
      ],
      "uv_hacks": [
        "365 nm UV often makes paper glow (optical brighteners)."
      ]
    },
    "gel_tab": {
      "name": "Gel Tab/Windowpane",
      "tips": [
        "Test a sliver with Ehrlich; slower reactions possible."
      ]
    },
    "microdot": {
      "name": "Microdot",
      "tips": [
        "Scrape a minute amount; Ehrlich for indoles."
      ]
    },
    "capsule": {
      "name": "Capsule",
      "tips": [
        "Mix sample; Marquis/Mecke/Mandelin; Simon\u2019s for MDMA vs MDA."
      ]
    },
    "tablet": {
      "name": "Tablet/Pill",
      "tips": [
        "Logos/colors are unreliable; scrape multiple points."
      ]
    }
  },
  "methods": {
    "overview": {
      "note": "Auxiliary observations. Do NOT confirm identity; avoid taste-testing. Use multiple reagents; use lab testing where possible."
    },
    "cards": [
      {
        "id": "uv_light",
        "name": "UV/Blacklight (365\u2013395 nm)",
        "type": "auxiliary",
        "do": [
          "Use near\u2011UV flashlight; observe fluorescence."
        ],
        "dont": [
          "Fluorescence \u2260 LSD; many papers/inks glow."
        ],
        "notes": [
          "Paper brighteners glow blue\u2011white; not diagnostic."
        ]
      },
      {
        "id": "taste",
        "name": "Taste (AVOID)",
        "type": "do-not",
        "dont": [
          "Do not lick/bite unknown items."
        ],
        "notes": [
          "Bitter/numbing can be a red flag (e.g., NBOMe) but taste is unsafe/unreliable."
        ]
      },
      {
        "id": "strip_tests",
        "name": "Test Strips (Immunoassay)",
        "type": "screening",
        "do": [
          "Fentanyl/xylazine strips per instructions."
        ],
        "dont": [
          "Negatives \u2260 safe."
        ],
        "notes": [
          "Useful adjunct when opioids/adulterants are possible."
        ]
      }
    ]
  },
